<h2 class="mt-4">Popular Items</h2>
    <div class="d-flex mt-3">
    <% if(popularItems.length) { %>
        <% popularItems.forEach((data,index) => { %>
            <div key="popularItem-<%=index%>" style="width:min-content" class="me-3">
                <a href="<%=data?.url%>">
                    <div class="d-flex flex-column">
                        <img class="popular-image" src="<%=data.imgUrl%>">
                        <div class="d-flex justify-content-between align-items-top">
                            <span><%= data.name %></span>
                            <span>Â£ <%= data.price %></span>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %>  
    <% } else {%>
        <div class="flex" style="text-align: center;">
            <h3 style="font-size: 5rem;">Oh no!</h3>
            <p><strong>Looks like we don't have any popular items...</strong></p>
        </div>
    <% } %>
    </div>
