<%- include('./partials/header') -%>
<h1 class="text-primary"><%= title %></h1>

<form method="POST">
    <div>
        <label for="name">
            Name:
        </label>
        <input type="text" id="name" name="name" placeholder="Category Name" value="<%= (typeof category !== 'undefined' ? category.name : '') %>" >
    </div>
    <div>
        <label for="description">
            Description:
        </label> 
        <input type="text" id="description" name="description" placeholder="Category Description" value="<%= (typeof category !== 'undefined' ? category.description : '') %>" >
    </div>
    <button type="submit">submit</button>
</form>
    
<%- include('./partials/footer') -%>
