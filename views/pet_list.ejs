<%- include('./partials/header') -%>
<h1 class="text-primary">Pets</h1>

    <button class="mt-2">
        <a href="/catalog/pet/create" class="link-none">Create</a>
    </button>

    <% if(pets.length) { %>
        <% pets.forEach((pet,index) => {%>
            <div class="d-flex align-items-end mt-2">
                <h3 class="me-5"><a class="link-none" href="<%=pet.url%>"> <%= pet.name %> </a></h3>
                <span><%= pet.gender %></span>
            </div>
            <h5 class="ms-2">Species: <a href="<%= pet.species.url%>"><%= pet.species.name%></a></h5>
            <div class="mt-2">
                <%= pet.description %>
            </div>
            <div class="mt-2 mb-2 d-flex align-items-end">
                <a href="<%=pet.url%>/update" class="link-none me-2">Update</a>
                <a href="<%=pet.url%>/delete" class="link-none text-danger">Delete</a>
            </div>

            <hr>

        <% })%>
    <% } else { %>
        <p class="mt-2">
            <strong>There are no pets.</strong>
        </p>
        
    <% } %>
<%- include('./partials/footer') -%>
