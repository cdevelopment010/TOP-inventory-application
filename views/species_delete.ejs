<%- include('./partials/header') -%>
<h1 class="text-primary"><%= title %></h1>

    <% if (pets.length) { %> 
        <p>There are <%= pets.length %> pets in this species. Please delete these pets before deleting the species.</p>
        <small>*Note the pets will be very sad</small>
        <div class="d-grid grid-col-auto-300 mt-3 gap-3 mb-3 justify-content-center-sm">
            <% pets.forEach((data,index) => { %>
                <div key="pet-<%=index%>" class="">
                    <%- include('./partials/card', {pets: [data] }) %>
                </div>
            <% }) %> 
        </div>
    <% } else {%>
        <p class="mb-2 mt-2">Are you sure you want to delete this species?</p>
        <form method="POST">
            <input type="hidden" name="species_id" value="<%=species._id%>">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    <% } %>
<%- include('./partials/footer') -%>
